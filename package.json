{
    "name": "react-tabbordion",
    "description": "Components and hooks to create your own React Tabs and Accordion components",
    "version": "2.0.0-beta.2",
    "author": "Vesa Piittinen <vesa.piittinen@gmail.com>",
    "bugs": {
        "url": "https://github.com/Merri/react-tabbordion/issues"
    },
    "homepage": "https://github.com/Merri/react-tabbordion#readme",
    "keywords": [
        "react",
        "react-component",
        "accordion",
        "panel",
        "tabs",
        "a11y",
        "bem"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/merri/react-tabbordion.git"
    },
    "main": "dist/index.js",
    "umd:main": "dist/index.umd.js",
    "module": "dist/index.esm.js",
    "esmodule": "dist/index.modern.js",
    "source": "src/index.js",
    "scripts": {
        "start": "microbundle watch",
        "prepare": "microbundle --name ReactTabbordion --external react,prop-types --globals react=React,prop-types=PropTypes --jsx React.createElement",
        "coverage": "nyc yarn test",
        "test": "cross-env NODE_ENV=test riteway -r sucrase/register/js src/test/**/*.test.js | tap-difflet",
        "jest": "jest",
        "demo": "deno run --allow-net --allow-read demo.js"
    },
    "files": [
        "dist/*",
        "src/*"
    ],
    "devDependencies": {
        "@testing-library/react": "^11.0.2",
        "cross-env": "^7.0.2",
        "flow-bin": "0.131.0",
        "jsdom": "^16.4.0",
        "jsdom-global": "^3.0.2",
        "microbundle": "0.12.3",
        "nyc": "^15.1.0",
        "prettier": "^2.0.5",
        "prop-types": "^15.7.2",
        "react": "16.13.1",
        "riteway": "^6.1.2",
        "sucrase": "^3.15.0",
        "tap-difflet": "^0.7.2"
    },
    "peerDependencies": {
        "prop-types": "^15.7.0",
        "react": "^16.8.0"
    },
    "dependencies": {
        "fast-deep-equal": "^3.1.3"
    }
}
